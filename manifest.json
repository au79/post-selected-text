{

  "manifest_version": 2,
  "name": "Post selected",
  "description": "Post selected text to a remote URL",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "post-selected@oolong.com",
      "strict_min_version": "63.0b14"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "permissions": [
    "menus",
    "search",
    "storage"
  ],
  
  "icons": {
    "16": "icons/send-arrow-right.svg",
    "48": "icons/send-arrow-right.svg",
    "96": "icons/send-arrow-right.svg"
  }

}
